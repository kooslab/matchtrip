{
	"name": "boilerplate",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:prod": "bun --env-file=.env.prod run vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "bun ./build/index.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:push": "bun --env-file=.env run drizzle-kit push",
		"db:push:prod": "bun --env-file=.env.prod run drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun --env-file=.env run drizzle-kit migrate",
		"db:migrate:prod": "bun --env-file=.env.prod run drizzle-kit migrate",
		"db:studio": "bun --env-file=.env run drizzle-kit studio",
		"db:studio:prod": "bun --env-file=.env.prod run drizzle-kit studio",
		"migrate:images": "tsx scripts/migrate-image-urls.ts",
		"migrate:product-images": "tsx scripts/migrate-product-images.ts",
		"migrate:all-to-private": "tsx scripts/migrate-all-to-private.ts",
		"sync:templates": "bun ../sync-kakao-templates.ts",
		"r2:list": "tsx scripts/list-r2-contents.ts",
		"r2:copy-to-private": "tsx scripts/copy-to-private-bucket.ts",
		"r2:copy-dry": "tsx scripts/copy-to-private-bucket.ts --dry-run"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.19.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.14",
		"@tosspayments/tosspayments-sdk": "^2.3.5",
		"@types/bun": "^1.2.5",
		"@types/pg": "^8.11.11",
		"drizzle-kit": "^0.30.5",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sharp": "^0.34.3",
		"svelte": "^5.23.0",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.14",
		"tsx": "^4.20.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.2",
		"vite-plugin-pwa": "^1.0.3",
		"vite-plugin-svelte-svg": "^2.3.0"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.817.0",
		"@aws-sdk/s3-request-presigner": "^3.832.0",
		"@internationalized/date": "^3.8.2",
		"@tiptap/core": "^3.0.7",
		"@tiptap/extension-image": "^3.0.7",
		"@tiptap/extension-link": "^3.0.7",
		"@tiptap/extension-placeholder": "^3.0.7",
		"@tiptap/pm": "^3.0.7",
		"@tiptap/starter-kit": "^3.0.7",
		"arctic": "^3.7.0",
		"better-auth": "^1.2.4",
		"bits-ui": "^1.3.12",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.40.0",
		"lucide-svelte": "^0.511.0",
		"nanoid": "^5.1.5",
		"openai": "^5.12.2",
		"phosphor-svelte": "^3.0.1",
		"postgres": "^3.4.5",
		"resend": "^4.5.2"
	}
}
